# vim: set foldmethod=marker foldlevel=0 ft=config nomodeline:

# Screen capture
# Take a screenshot of a whole screen
bindsym $mod+Ctrl+1 exec grim "screenshot-$(date +%d%m%Y-%H%M%S).png"
# Take a screenshot of current window
bindsym $mod+Ctrl+2 exec grim -g "$(swaymsg -t get_tree | jq -r '.. | select(.focused?) | .rect | "\(.x),\(.y) \(.width)x\(.height)"')" "screenshot-$(date +%d%m%Y-%H%M%S).png"
# Take a screenshot of a part of the screen
bindsym $mod+Ctrl+3 exec grim -g "$(slurp)" "screenshot-$(date +%d%m%Y-%H%M%S).png"
# Take a screenshot of a part of the screen and copy to clipboard
bindsym $mod+Ctrl+4 exec grim -g "$(slurp)" - | wl-copy
