{
  "coc.preferences.formatOnSaveFiletypes": [
    "typescript",
    "typescriptreact",
    "markdown",
    "javascript"
  ],
  "suggest.triggerAfterInsertEnter": true,
  "suggest.timeout": 500,
  "suggest.minTriggerInputLength": 2,
  "suggest.acceptSuggestionOnCommitCharacter": true,
  "suggest.snippetIndicator": "â–º",
  "rust-analyzer.updates.channel": "nightly",
  "rust-analyzer.lens.enable": true,
  "rust-analyzer.inlayHints.chainingHints": true,
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.checkOnSave.enable": true,
  "git.addGBlameToVirtualText": true,
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "cSpell.userWords": [
    "Denoise",
    "Resampler",
    "Worklet",
    "pexip",
    "preso",
    "webrtc",
    "worklets"
  ],
  "tsserver.disableAutomaticTypeAcquisition": true,
  "typescript.format.enabled": true,
  "eslint.autoFix": true,
  "eslint.autoFixOnSave": true,
  "javascript.format.enabled": true,
  "languageserver": {
    "efm": {
      "command": "efm-langserver",
      "args": [],
      "filetypes": [
        "vim",
        "make",
        "css",
        "scss",
        "sass",
        "less",
        "yaml",
        "zsh",
        "dockerfile"
      ]
    },
    "haskell": {
      "command": "ghcide-via-stack-exec",
      "args": [""],
      "rootPatterns": [
        "*.cabal",
        "cabal.config",
        "cabal.project",
        "package.yaml",
        "stack.yaml"
      ],
      "filetypes": ["hs", "lhs", "haskell"],
      "initializationOptions": { "languageServerHaskell": { "hlintOn": true } }
    }
  }
}
