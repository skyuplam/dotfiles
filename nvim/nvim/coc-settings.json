{
  "suggest.triggerAfterInsertEnter": true,
  "suggest.timeout": 500,
  "suggest.minTriggerInputLength": 2,
  "suggest.acceptSuggestionOnCommitCharacter": true,
  "suggest.snippetIndicator": "â–º",
  "rust-analyzer.updates.channel": "nightly",
  "rust-analyzer.lens.enable": true,
  "rust-analyzer.inlayHints.chainingHints": true,
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.checkOnSave.enable": true,
  "git.addGBlameToVirtualText": true,
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "cSpell.userWords": [
    "Denoise",
    "Resampler",
    "Worklet",
    "pexip",
    "preso",
    "webrtc",
    "worklets"
  ],
  "tsserver.disableAutomaticTypeAcquisition": true,
  "eslint.autoFix": true,
  "eslint.autoFixOnSave": true,
  "languageserver": {
    "efm": {
      "command": "efm-langserver",
      "args": [],
      "filetypes": [
        "vim",
        "make",
        "css",
        "scss",
        "sass",
        "less",
        "yaml",
        "zsh",
        "dockerfile"
      ]
    },
    "lua": {
      "command": "lua-language-server",
      "args": ["-E", "/usr/share/lua-language-server/main.lua"],
      "filetypes": ["lua"],
      "rootPatterns": [".git/"],
      "settings": {
        "lua": {
          "workspace": {
            "library": {
              "/usr/share/nvim/runtime/lua": true
            }
          },
          "runtime": {
            "version": "LuaJIT"
          },
          "diagnostics": {
            "enable": true,
            "globals": [
              "hs",
              "vim",
              "it",
              "describe",
              "before_each",
              "after_each"
            ],
            "disable": ["lowercase-global"]
          }
        }
      }
    },
    "haskell": {
      "command": "ghcide-via-stack-exec",
      "args": [""],
      "rootPatterns": [
        "*.cabal",
        "cabal.config",
        "cabal.project",
        "package.yaml",
        "stack.yaml"
      ],
      "filetypes": ["hs", "lhs", "haskell"],
      "initializationOptions": { "languageServerHaskell": { "hlintOn": true } }
    }
  }
}
